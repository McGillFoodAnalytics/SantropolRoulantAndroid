<resources>


    <!-- TITLES / TEXT -->


    <style name="header_bold">
        <item name="android:textSize">@dimen/font_largest</item>
        <item name="android:textColor">@color/darker_purple</item>
        <item name="android:fontFamily"> @font/avenir_next_bold</item>
    </style>

    <style name="header_regular">
        <item name="android:textSize">@dimen/font_largest</item>
        <item name="android:textColor">@color/darker_purple</item>
        <item name="android:fontFamily"> @font/avenir_next_demi</item>
    </style>


    <style name="sub_header_1_bold">
        <item name="android:textSize">@dimen/font_larger</item>
        <item name="android:textColor">@color/darker_purple</item>
        <item name="android:fontFamily">@font/avenir_next_bold</item>
    </style>


    <style name="sub_header_1_regular">
        <item name="android:textSize">@dimen/font_larger</item>
        <item name="android:textColor">@color/darker_purple</item>
        <item name="android:fontFamily">@font/avenir_next_demi</item>
    </style>


    <style name="sub_header_2_bold">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/darker_purple</item>
        <item name="android:fontFamily">@font/avenir_next_bold</item>
    </style>

    <style name="sub_header_2_regular">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/darker_purple</item>
        <item name="android:fontFamily">@font/avenir_next_demi</item>
    </style>


    <style name="sub_header_3_bold">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/avenir_next_bold</item>
    </style>

    <style name="sub_header_3_regular">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/avenir_next_demi</item>
    </style>


    <style name="content_text">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:fontFamily">@font/avenir_next_demi</item>
    </style>





    <!-- TEXT VIEWS -->

    <style name="text_view_1">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:fontFamily">@font/avenir_next_regular</item>
        <item name="android:background">@color/lighter_purple</item>
    </style>

    <style name="text_view_2">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:fontFamily">@font/avenir_next_regular</item>
        <item name="android:background">@color/lighter_purple</item>
    </style>



    <!-- BUTTONS / CARDVIEWS -->

    <style name="card_view_1">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:fontFamily">@font/avenir_next_regular</item>
        <item name="android:background">@color/lighter_purple</item>
    </style>


    <style name="button_next">
        <item name="android:textSize">@dimen/font_larger</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/avenir_next_demi</item>
        <item name="android:background">@color/light_purple</item>

    </style>



    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dark_purple</item>
        <item name="colorPrimaryDark">@color/darker_purple</item>
        <item name="colorAccent">@color/mild_purple</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
