<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundblur"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".Settings">

    <Button
        android:id="@+id/btnMyProfile"
        style="@style/button_next"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/dark_purple"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="@string/my_profile"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/bg_settings_profile"
        app:layout_constraintLeft_toLeftOf="@+id/lg_settings_btns"
        app:layout_constraintRight_toRightOf="@+id/rg_settings_btns"
        app:layout_constraintTop_toTopOf="@+id/tg_settings_profile" />
    <Button
        android:id="@+id/btnLang"
        style="@style/button_next"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/dark_purple"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="@string/language"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/bg_settings_lang"
        app:layout_constraintLeft_toLeftOf="@+id/lg_settings_btns"
        app:layout_constraintRight_toRightOf="@+id/rg_settings_btns"
        app:layout_constraintTop_toTopOf="@+id/tg_settings_lang" />
    <Button
        android:id="@+id/btnLogout"
        style="@style/button_next"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/dark_purple"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="@string/logout"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/bg_settings_logout"
        app:layout_constraintLeft_toLeftOf="@+id/lg_settings_btns"
        app:layout_constraintRight_toRightOf="@+id/rg_settings_btns"
        app:layout_constraintTop_toTopOf="@+id/tg_settings_logout" />

    <TextView
        android:id="@+id/tvSettingsTitle"
        style="@style/sub_header_2_regular"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="@string/personal_settings"
        android:textColor="@color/dark_purple"
        android:textSize="@dimen/_25sdp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/bg_settings_header"
        app:layout_constraintLeft_toLeftOf="@+id/lg_settings_header"
        app:layout_constraintRight_toRightOf="@+id/rg_settings_header"
        app:layout_constraintTop_toTopOf="@+id/tg_settings_header" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/lg_settings_btns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rg_settings_btns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/lg_settings_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rg_settings_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/tg_settings_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bg_settings_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".45" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/tg_settings_lang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bg_settings_lang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".65" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/tg_settings_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bg_settings_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".85" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/tg_settings_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bg_settings_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".20" />


</androidx.constraintlayout.widget.ConstraintLayout>