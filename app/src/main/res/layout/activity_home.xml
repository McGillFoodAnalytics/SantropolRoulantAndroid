<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Home">


    <androidx.cardview.widget.CardView
        android:id="@+id/volunteerCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/radius2"
        android:clickable="true"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/bg_home_volunteer_sched"
        app:layout_constraintLeft_toLeftOf="@+id/lg_home_volunteer_profile"
        app:layout_constraintRight_toRightOf="@+id/rg_home_volunteer_profile"
        app:layout_constraintTop_toTopOf="@+id/tg_home_volunteer_sched">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/radius2"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="2dp"
            android:paddingTop="6dp"
            android:paddingEnd="2dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:src="@drawable/ic_like"
                app:srcCompat="@drawable/volunteer"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:fontFamily="@font/avenir_next_demi"
                android:text="Volunteer"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_next_regular"
                android:gravity="center"
                android:padding="5sp"
                android:text="Do Good &amp; Feel Good"
                android:textColor="@color/dark_grey" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/scheduleCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        app:background="@drawable/radius2"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/bg_home_volunteer_sched"
        app:layout_constraintLeft_toLeftOf="@+id/lg_home_sched_contact"
        app:layout_constraintRight_toRightOf="@+id/rg_home_sched_contact"
        app:layout_constraintTop_toTopOf="@+id/tg_home_volunteer_sched">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/radius2"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="2dp"
            android:paddingTop="6dp"
            android:paddingEnd="2dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:src="@drawable/ic_calendar"
                app:srcCompat="@drawable/schedule"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:fontFamily="@font/avenir_next_demi"
                android:text="My Schedule"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_next_regular"
                android:gravity="center"
                android:padding="5sp"
                android:text="Check your schedule"
                android:textColor="@color/dark_grey" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/profileCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        app:background="@drawable/radius2"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/bg_home_profile_contact"
        app:layout_constraintLeft_toLeftOf="@+id/lg_home_volunteer_profile"
        app:layout_constraintRight_toRightOf="@+id/rg_home_volunteer_profile"
        app:layout_constraintTop_toTopOf="@+id/tg_home_profile">>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/radius2"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="2dp"
            android:paddingTop="6dp"
            android:paddingEnd="2dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:src="@drawable/ic_user"
                app:srcCompat="@drawable/profile"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:fontFamily="@font/avenir_next_demi"
                android:text="Profile"
                android:textColor="#000000"
                android:textSize="18sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_next_regular"
                android:gravity="center"
                android:padding="5sp"
                android:text="Update Information"
                android:textColor="@color/dark_grey" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/contactCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        app:background="@drawable/radius2"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/bg_home_profile_contact"
        app:layout_constraintLeft_toLeftOf="@+id/lg_home_sched_contact"
        app:layout_constraintRight_toRightOf="@+id/rg_home_sched_contact"
        app:layout_constraintTop_toTopOf="@+id/tg_home_profile">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/radius2"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="2dp"
            android:paddingTop="6dp"
            android:paddingEnd="2dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                app:srcCompat="@drawable/contact_us" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:fontFamily="@font/avenir_next_demi"
                android:text="Contact Us"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_next_regular"
                android:gravity="center"
                android:padding="5sp"
                android:text="Inquiries and More"
                android:textColor="@color/dark_grey" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/tvHello"
        style="@style/header_bold"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/avenir_next_demi"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_24sdp"
        app:layout_constraintBottom_toBottomOf="@+id/bg_home_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tg_home_user" />


    <TextView
        android:id="@+id/tvGreeting"
        style="@style/sub_header_1_regular"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/avenir_next_demi"
        android:text="@string/Welcome"
        android:textSize="@dimen/_15sdp"
        app:layout_constraintBottom_toBottomOf="@+id/bg_home_welcome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tg_home_welcome" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/lg_home_volunteer_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".01" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rg_home_volunteer_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.485" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/lg_home_sched_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".515" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rg_home_sched_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".99" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/tg_home_volunteer_sched"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".23" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bg_home_volunteer_sched"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.53" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/tg_home_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.54" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bg_home_profile_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/tg_home_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".17" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bg_home_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.21" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/tg_home_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bg_home_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".15" />
</androidx.constraintlayout.widget.ConstraintLayout>