<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".TimePreference">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/contact_us"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/spacing_huge"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline5">

        <TextView
            android:id="@+id/tvTitle2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tv_height_tall"
            android:gravity="center"
            android:text="Let's get in touch!"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/header_bold"
            />

        <TextView
            android:id="@+id/tvPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tv_height_tall"
            android:paddingLeft="@dimen/spacing_large"
            android:text="(514) 284-9335"
            android:drawableLeft="@drawable/phone"
            android:drawablePadding="@dimen/spacing_large"
            android:gravity="center_vertical"
            style="@style/text_view_1"
            />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tv_height_tall"
            android:paddingLeft="@dimen/spacing_large"
            android:text="info@santropolroulant.org"
            android:drawableLeft="@drawable/email"
            android:drawablePadding="@dimen/spacing_large"
            android:gravity="center_vertical"
            style="@style/text_view_1"
            />


        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tv_height_tall"
            android:paddingLeft="@dimen/spacing_large"
            android:text="111, Roy East, Montreal (QC) H2W 1M1"
            android:drawableLeft="@drawable/location"
            android:drawablePadding="@dimen/spacing_large"
            android:gravity="center_vertical"
            style="@style/text_view_2"
            />


        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ContactUs"
            />

    </LinearLayout>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="30dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>