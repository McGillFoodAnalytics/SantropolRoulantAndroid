<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateAccount2"
    android:id="@+id/create_account_2"
    android:background="@drawable/main_background"
    android:clickable="true"
    android:focusableInTouchMode="true">

    <EditText
        android:id="@+id/etUser_Address"
        android:layout_width="340sp"
        android:layout_height="75sp"
        android:layout_marginStart="8sp"
        android:layout_marginTop="150sp"
        android:layout_marginEnd="8sp"
        android:ems="10"
        android:hint="Address"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etUser_City"
        android:layout_width="340sp"
        android:layout_height="75sp"
        android:layout_marginStart="8sp"
        android:layout_marginTop="28sp"
        android:layout_marginEnd="8sp"
        android:ems="10"
        android:hint="City"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etUser_Address" />

    <EditText
        android:id="@+id/etUser_Postal_Code"
        android:layout_width="340sp"
        android:layout_height="75sp"
        android:layout_marginStart="8sp"
        android:layout_marginTop="28sp"
        android:layout_marginEnd="8sp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="Postal Code"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/etNext_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etUser_City"
        app:layout_constraintVertical_bias="0.006" />

    <Button
        android:id="@+id/etNext_2"
        android:layout_width="412dp"
        android:layout_height="78dp"
        android:layout_marginStart="8sp"
        android:background="#679267"
        android:text="NEXT"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>